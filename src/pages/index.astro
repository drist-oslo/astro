---

<main class="bg-black text-white w-full">
  <section class="py-12">
    <div class="overflow-hidden embla">
      <div class="flex gap-6 px-6">
        {cards.map((card) => (
          <div class="relative flex-shrink-0 w-[320px] h-[480px] rounded-2xl overflow-hidden shadow-lg group transition-transform duration-500 hover:-translate-y-2">
            <img src={card.image} alt={card.title} class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-105" />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
            <div class="absolute bottom-0 p-4">
              <h3 class="text-lg font-semibold mb-2">{card.title}</h3>
              <div class="flex flex-wrap gap-2">
                {card.tags.map(tag => (
                  <span class="px-3 py-1 text-xs border border-white rounded-full">{tag}</span>
                ))}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</main>

<script type="module" is:inline>
  import EmblaCarousel from 'embla-carousel';
  import Autoplay from 'embla-carousel-autoplay';

  const embla = EmblaCarousel(document.querySelector('.embla'), {
    loop: true
  }, [
    Autoplay({ delay: 3000 })
  ]);
</script>
